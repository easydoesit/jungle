<section class="users-new">

  <header class="page-header">
    <h1>Signup!</h1>
  </header>

<% flash.each do |type, msg| %>
    <% flash.notice.each do |blah| %>
    <div class="alert alert-info" role= alert>
    <%= blah %>.
  </div>
  <% end %>
<% end %>


<%= form_for :user, url: '/users' do |f| %>
  <div class="mb-3">
    <%=label_tag 'first_name', 'First Name:', class: "form-label" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%=label_tag 'last_name', 'Last Name:', class: "form-label" %>
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
    <div class="mb-3">
    <%= label_tag :email, 'Email:', class: "form-label" %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%=label_tag 'password', 'Password:', class: "form-label" %>
    <%=  f.password_field :password, class: "form-control" %>
  </div>
    <div class="mb-3">
    <%=label_tag 'password_confirmation', 'Password Confirmation:', class: "form-label" %>
    <%=  f.password_field :password_confirmation, class: "form-control" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary"%>
<% end %>

</section>